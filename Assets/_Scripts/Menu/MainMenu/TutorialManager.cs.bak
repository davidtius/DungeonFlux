using UnityEngine;
using UnityEngine.UI;
using TMPro;
using System.Collections.Generic;

public class TutorialManager : MonoBehaviour
{
    [Header("UI References")]
    public GameObject tutorialOverlay;
    public List<GameObject> pages;
    
    [Header("Buttons")]
    public Button btnNext;
    public Button btnPrev;
    public TextMeshProUGUI btnNextText; // Untuk ubah jadi "START"

    [Header("Settings")]
    public string gameplaySceneName = "GamePlay"; // Scene tujuan setelah tutor

    [Header("Audio Settings")]
    public AudioSource sfxSource; 
    public AudioClip hoverSound;  
    public AudioClip clickSound;

    private int currentPageIndex = 0;
    private bool isNewGameRun = false; // Penanda apakah ini dari tombol New Game

    void Start()
    {
        tutorialOverlay.SetActive(false); // Pastikan mati di awal
    }

    // Fungsi ini dipanggil oleh MainMenuController
    public void StartTutorialSequence()
    {
        isNewGameRun = true; // Tandai ini mau main game
        OpenTutorial();
    }

    // Fungsi ini dipanggil tombol "Help" (cuma baca doang)
    public void OpenHelpOnly()
    {
        isNewGameRun = false; // Tandai ini cuma baca
        OpenTutorial();
    }

    void OpenTutorial()
    {
        PlayClickSFX();
        tutorialOverlay.SetActive(true);
        currentPageIndex = 0;
        UpdatePage();
    }

    public void NextPage()
    {
        PlayClickSFX();
        if (currentPageIndex < pages.Count - 1)
        {
            currentPageIndex++;
            UpdatePage();
        }
        else
        {
            // Halaman Terakhir: Finish
            FinishTutorial();
        }
    }

    public void PrevPage()
    {
        PlayClickSFX();
        if (currentPageIndex > 0)
        {
            currentPageIndex--;
            UpdatePage();
        }
    }

    public void FinishTutorial()
    {
        PlayClickSFX();
        // Tandai pemain sudah pernah lihat tutor
        PlayerPrefs.SetInt("HasSeenTutorial", 1);
        PlayerPrefs.Save();

        tutorialOverlay.SetActive(false);

        // Jika ini dari New Game -> PINDAH SCENE
        if (isNewGameRun)
        {
            LevelLoader.LoadLevel(gameplaySceneName);
        }
    }
    
    public void SkipTutorial()
    {
        PlayClickSFX();
        FinishTutorial(); // Langsung loncat ke finish (Load Game)
    }

    void UpdatePage()
    {
        // Matikan semua, nyalakan yang aktif
        for (int i = 0; i < pages.Count; i++)
        {
            pages[i].SetActive(i == currentPageIndex);
        }

        // Atur tombol Prev
        if (btnPrev) btnPrev.interactable = (currentPageIndex > 0);

        // Atur Teks Tombol Next
        if (btnNextText)
        {
            if (currentPageIndex == pages.Count - 1)
                btnNextText.text = isNewGameRun ? "Start" : "Close";
            else
                btnNextText.text = "Next";
        }
    }

    public void PlayClickSFX()
    {
        if (sfxSource != null && clickSound != null) sfxSource.PlayOneShot(clickSound);
    }

    public void PlayHoverSFX()
    {
        if (sfxSource != null && hoverSound != null) sfxSource.PlayOneShot(hoverSound);
    }
}
